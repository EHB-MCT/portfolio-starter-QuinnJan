
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Buyer {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  firstName String
  lastName String
  email String
  phonenumber String
  Car Car[] 
}

model Car {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name String 
  type String
  brand String
  price Int
  owner Buyer @relation(fields: [buyerId], references: [id], onDelete: Cascade)
  buyerId Int
}